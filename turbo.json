{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"db:generate": {
			"cache": false
		},
		"db:push": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^build", "^db:generate"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"dev": {
			"dependsOn": ["^db:generate"],
			"cache": false,
			"persistent": true
		}
	}
}
