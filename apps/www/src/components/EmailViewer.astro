---

<div class="w-full max-w-4xl mx-auto">
    <div
        class="bg-neutral-900 border border-neutral-700 rounded-2xl overflow-hidden"
    >
        <!-- Header -->
        <div class="bg-neutral-800 px-6 py-4 border-b border-neutral-700">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                    <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                    <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                </div>
                <div class="flex items-center space-x-2">
                    <span class="text-xs text-neutral-400">Live Demo</span>
                    <div
                        class="w-2 h-2 bg-green-400 rounded-full animate-pulse"
                    >
                    </div>
                </div>
            </div>
        </div>

        <!-- Email Address Display -->
        <div class="p-6 border-b border-neutral-700">
            <div class="flex items-center justify-between">
                <div class="flex flex-col">
                    <span
                        class="text-sm text-neutral-400 uppercase tracking-wide"
                        >Inbox Address</span
                    >
                    <div class="flex items-center space-x-3 mt-1">
                        <span class="text-2xl font-mono text-neutral-100"
                            >henri@selfmail.app</span
                        >
                        <button
                            class="copy-btn px-3 py-1 text-xs bg-neutral-700 hover:bg-neutral-600 rounded-md transition-colors"
                            onclick="copyToClipboard('henri@selfmail.app')"
                        >
                            Copy
                        </button>
                    </div>
                </div>
                <div class="text-right">
                    <div class="text-sm text-neutral-400">Status</div>
                    <div class="flex items-center space-x-2 mt-1">
                        <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                        <span class="text-sm text-green-400">Active</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Email Display Area -->
        <div class="p-6">
            <div
                id="emailContainer"
                class="min-h-64 bg-neutral-800 rounded-lg border border-neutral-700 p-6"
            >
                <div
                    class="flex flex-col items-center justify-center h-full text-center space-y-4"
                >
                    <div
                        class="w-16 h-16 bg-neutral-700 rounded-full flex items-center justify-center"
                    >
                        <svg
                            class="w-8 h-8 text-neutral-400"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                    </div>
                    <div class="space-y-2">
                        <h3 class="text-lg font-medium text-neutral-200">
                            Waiting for your email...
                        </h3>
                        <p class="text-neutral-400 text-sm max-w-md">
                            Send an email to <span
                                class="font-mono text-neutral-300"
                                >henri@selfmail.app</span
                            > from any email client and watch it appear here in real-time!
                        </p>
                    </div>
                    <div
                        class="flex items-center space-x-2 text-xs text-neutral-500"
                    >
                        <div
                            class="w-1 h-1 bg-neutral-500 rounded-full animate-pulse"
                        >
                        </div>
                        <span>Listening for incoming emails</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Demo Instructions -->
        <div class="bg-neutral-800 px-6 py-4 border-t border-neutral-700">
            <div class="flex items-start space-x-3">
                <div
                    class="w-5 h-5 bg-blue-500 rounded-full flex items-center justify-center shrink-0 mt-0.5"
                >
                    <svg
                        class="w-3 h-3 text-white"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                            clip-rule="evenodd"></path>
                    </svg>
                </div>
                <div class="flex-1">
                    <p class="text-sm text-neutral-300">
                        <strong>Try it out:</strong> Open your favorite email client
                        (Gmail, Outlook, Apple Mail, etc.) and send a test email
                        to the address above. You'll see it appear here instantly!
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function copyToClipboard(text: string) {
        navigator.clipboard.writeText(text).then(() => {
            const btn = document.querySelector(
                ".copy-btn",
            ) as HTMLButtonElement;
            if (btn) {
                const originalText = btn.textContent;
                btn.textContent = "Copied!";
                btn.classList.add("bg-green-600");
                setTimeout(() => {
                    btn.textContent = originalText;
                    btn.classList.remove("bg-green-600");
                }, 2000);
            }
        });
    }

    // Demo simulation - in real implementation this would connect to WebSocket
    function simulateEmailReceived() {
        const emailContainer = document.getElementById("emailContainer");
        if (!emailContainer) return;

        const emailHTML = `
            <div class="space-y-4 animate-fade-in">
                <div class="flex items-center justify-between border-b border-neutral-700 pb-3">
                    <div class="flex items-center space-x-3">
                        <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                            <span class="text-xs font-medium text-white">JD</span>
                        </div>
                        <div>
                            <div class="text-sm font-medium text-neutral-200">John Doe</div>
                            <div class="text-xs text-neutral-400">john@example.com</div>
                        </div>
                    </div>
                    <div class="text-xs text-neutral-400">Just now</div>
                </div>
                <div>
                    <h4 class="text-lg font-medium text-neutral-200 mb-2">Testing Selfmail Demo</h4>
                    <p class="text-neutral-300 text-sm leading-relaxed">
                        Hi there! I'm testing out this awesome Selfmail demo. The real-time email receiving is pretty impressive!
                    </p>
                </div>
                <div class="flex items-center justify-between pt-3 border-t border-neutral-700">
                    <div class="flex space-x-2">
                        <button class="px-3 py-1 text-xs bg-blue-600 hover:bg-blue-700 rounded-md transition-colors">Reply</button>
                        <button class="px-3 py-1 text-xs bg-neutral-700 hover:bg-neutral-600 rounded-md transition-colors">Forward</button>
                    </div>
                    <div class="text-xs text-neutral-500">Via Selfmail</div>
                </div>
            </div>
        `;

        emailContainer.innerHTML = emailHTML;
    }

    // Simulate an email after 3 seconds for demo purposes
    // setTimeout(simulateEmailReceived, 3000);
</script>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 0.5s ease-out;
    }
</style>
