{
	"name": "www",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "concurrently \"bun run watch\" \"bun --hot src/index.ts\"",
		"watch": "bun watch.ts",
		"build": "bun run build.ts",
		"start": "NODE_ENV=production bun run build && bun src/index.ts",
		"server": "bun --hot src/index.ts"
	},
	"dependencies": {
		"@tailwindcss/cli": "^4.1.12",
		"bun-plugin-tailwind": "^0.0.15",
		"react": "^19",
		"react-dom": "^19",
		"tailwindcss": "^4.1.11"
	},
	"devDependencies": {
		"@parcel/watcher": "^2.5.1",
		"@types/bun": "latest",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"nodemon": "^3.1.10"
	}
}
