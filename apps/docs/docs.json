{
	"$schema": "https://mintlify.com/docs.json",
	"theme": "maple",
	"name": "Selfmail",
	"icons": {
		"library": "lucide"
	},
	"colors": {
		"primary": "#36b3e0",
		"light": "#f1f1f1",
		"dark": "#303030"
	},
	"fonts": {
		"heading": {
			"family": "Geist",
			"weight": 600
		},
		"body": {
			"family": "Geist",
			"weight": 400
		}
	},
	"favicon": "/favicon.svg",
	"navigation": {
		"tabs": [
			{
				"tab": "Guides",
				"groups": [
					{
						"group": "First Steps",
						"pages": ["index", "quickstart"]
					},
					{
						"group": "Platform",
						"pages": [
							"platform/index",
							"platform/navigation",
							"platform/members"
						]
					},
					{
						"group": "Developers",
						"pages": ["dev/index"]
					}
				]
			}
		]
	},
	"logo": {
		"light": "/logo/light.svg",
		"dark": "/logo/dark.svg"
	},
	"navbar": {
		"links": [
			{
				"label": "Support",
				"href": "mailto:support@selfmail.app"
			}
		],
		"primary": {
			"type": "button",
			"label": "Home",
			"href": "https://selfmail.app"
		}
	},
	"contextual": {
		"options": [
			"copy",
			"view",
			"chatgpt",
			"claude",
			"perplexity",
			"mcp",
			"cursor",
			"vscode"
		]
	},
	"footer": {
		"socials": {
			"github": "https://github.com/selfmail/selfmail"
		}
	}
}
