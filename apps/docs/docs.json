{
	"$schema": "https://mintlify.com/docs.json",
	"theme": "mint",
	"name": "Selfmail Documentation",
	"colors": {
		"primary": "#36b3e0",
		"light": "#f1f1f1",
		"dark": "#303030"
	},
	"favicon": "/favicon.svg",
	"navigation": {
		"tabs": [
			{
				"tab": "Guides",
				"groups": [
					{
						"group": "Getting started",
						"pages": ["index", "quickstart", "development"]
					},
					{
						"group": "Customization",
						"pages": ["essentials/settings", "essentials/navigation"]
					},
					{
						"group": "Writing content",
						"pages": [
							"essentials/markdown",
							"essentials/code",
							"essentials/images",
							"essentials/reusable-snippets"
						]
					},
					{
						"group": "AI tools",
						"pages": [
							"ai-tools/cursor",
							"ai-tools/claude-code",
							"ai-tools/windsurf"
						]
					}
				]
			}
		]
	},
	"logo": {
		"light": "/logo/light.svg",
		"dark": "/logo/dark.svg"
	},
	"navbar": {
		"links": [
			{
				"label": "Support",
				"href": "mailto:support@selfmail.app"
