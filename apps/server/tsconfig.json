{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"verbatimModuleSyntax": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"outDir": "./dist",
		"types": ["node"],
		"composite": true,
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"tsc-alias": {
		"resolveFullPaths": true
	}
}
