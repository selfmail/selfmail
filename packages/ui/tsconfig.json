{
	"compilerOptions": {
		"jsx": "react-jsx",
		"allowJs": true,

		// Bundler mode
		"moduleResolution": "bundler",
		"module": "Preserve",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
    },
    "strictNullChecks": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["dist", "node_modules"]
}
