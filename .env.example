# Selfmail Environment Configuration
# Copy this to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://selfmail:your_secure_password@localhost:5432/selfmail

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# Timezone (optional)
TZ=UTC

# SSL Certificates Path (for production)
CERTIFICATE_PATH=/app/certs

# API Configuration
VITE_API_BASE_URL=http://localhost:3000

# Payment Integration (optional)
ACTIVATE_PAYMENTS=false
POLAR_SELFMAIL_PLUS_ID=
POLAR_SELFMAIL_PREMIUM_ID=
POLAR_WEBHOOK_SECRET=
POLAR_ORG_SLUG=
POLAR_SUCCESS_BASE_URL=

# File Upload Configuration
ENABLE_S3_UPLOAD=false
ENABLE_DOCKER_VOLUME_UPLOAD=true

# AWS S3 Configuration (if ENABLE_S3_UPLOAD=true)
AWS_ENDPOINT=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# SMTP Configuration
SMTP_API_URL=http://localhost:4001
RSPAMD_HOST=rspamd
RSPAMD_PORT=11332
CLAMAV_HOST=clamav
CLAMAV_PORT=3310